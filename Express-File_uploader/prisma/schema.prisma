generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String   @unique @db.VarChar(255)
  password  String
  email     String   @unique @db.VarChar(255)
  createdAt DateTime @default(now())
  Folder    Folder[]
  file      file[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime

  @@index([expiresAt])
}

model Folder {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  owner     User     @relation(fields: [userId], references: [id])
  userId    String
  file      file[]
}

model file {
  id        String   @id @default(uuid())
  name      String
  url       String
  size      Int
  createdAt DateTime @default(now())
  owner     User     @relation(fields: [userId], references: [id])
  userId    String
  folder    Folder   @relation(fields: [folderId], references: [id])
  folderId  String
}
